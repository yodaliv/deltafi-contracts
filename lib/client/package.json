{
  "name": "deltafi-client",
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf lib",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier -w src test",
    "test-int": "jest int --force-exit",
    "test-unit": "jest unit",
    "prepublishOnly": "npm run clean && npm run build",
    "new-swap": "tsc && node lib/scripts/new-swap && yarn clean",
    "deploy-and-test": "cd ../../ && ./scripts/deploy-stable-swap.sh localnet && cd lib/client && yarn test-int",
    "ci": "start-server-and-test 'solana-test-validator --reset --quiet' http://localhost:8899/health deploy-and-test"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.21.0",
    "@types/bn.js": "^4.11.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "husky": ">=4",
    "jest": "^26.6.1",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "bn.js": "^5.1.3",
    "buffer-layout": "^1.2.0"
  },
  "peerDependencies": {
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.21.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": "prettier --write"
  }
}
